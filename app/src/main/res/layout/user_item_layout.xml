<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="70dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="70dp"
    android:background="@drawable/button_black_background"
    tools:context=".Fragments.HomeFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_search_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:civ_border_color="@color/colorPrimaryTrans"
        app:civ_border_width="3dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/user_search_image"
        app:layout_constraintStart_toStartOf="@+id/user_search_image"
        app:layout_constraintTop_toBottomOf="@+id/user_search_image" />

    <TextView
        android:id="@+id/user_search_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="User profile name"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/user_search_image"
        app:layout_constraintStart_toStartOf="@+id/user_search_image"
        app:layout_constraintTop_toBottomOf="@+id/user_search_name" />

    <Button
        android:id="@+id/user_search_btn_follow"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_black_background"
        android:text="Follow"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/user_search_image"
        app:layout_constraintStart_toStartOf="@+id/user_search_image"
        app:layout_constraintTop_toBottomOf="@+id/user_search_profile_name" />

</androidx.constraintlayout.widget.ConstraintLayout>